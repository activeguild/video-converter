<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FFmpeg Video Processing</title>
</head>
<body>
    <h1>Upload a Video File for Processing</h1>
    <form id="uploadForm" enctype="multipart/form-data">
        <label for="file">Choose a video file:</label>
        <input type="file" id="file" name="file" accept="video/*" required>
        <button type="submit">Upload and Process</button>
    </form>
    <h2>Processing Log</h2>
    <pre id="logOutput">Waiting for upload...</pre>
    <h2>Processed Video</h2>
    <video id="processedVideo" controls style="display: none;"></video>

    <script>
        const form = document.getElementById('uploadForm');
        const logOutput = document.getElementById('logOutput');
        const processedVideo = document.getElementById('processedVideo');

        form.addEventListener('submit', async (event) => {
            event.preventDefault();
            const formData = new FormData(form);
            
            logOutput.textContent = "Processing...";
            processedVideo.style.display = "none";
            
            try {
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                
                if (response.ok) {
                    logOutput.textContent = result.log;
                    processedVideo.src = `/download/${result.output_file}`;
                    processedVideo.style.display = "block";
                } else {
                    logOutput.textContent = `Error: ${result.error}`;
                }
            } catch (error) {
                logOutput.textContent = `Unexpected error: ${error.message}`;
            }
        });
    </script>
</body>
</html>
